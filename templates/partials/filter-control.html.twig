<form method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded">
    <div class="input-group">
        <div class="input-group-prepend">
            <select name="{{ filterFieldName }}" class="form-control">
                {% for field, label in fields %}
                    <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
                {% endfor %}
            </select>
        </div>
        <input type="text" class="form-control" value="{{ selectedValue }}" name="{{ filterValueName }}" placeholder="Buscar">
        <div class="input-group-append">
            <button class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>